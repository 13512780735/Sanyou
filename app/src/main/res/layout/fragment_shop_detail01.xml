<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_b"
    tools:context="com.likeits.sanyou.ui.shop.fargment.ShopDetail01Fragment">

    <!-- TODO: Update blank fragment layout -->
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/ll_shop_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/smssdk_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:dividerHeight="5dp"
        android:dividerPadding="2dip">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/shop_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:padding="10dip"
                    android:text="顶点钓鱼灯夜钓灯 紫光蓝光黄白四光源大容量强光恒流调焦手电筒"/>
                <TextView
                    android:id="@+id/tv_newPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="¥ 680.00"
                    android:textColor="@color/head_red"
                    android:textSize="30sp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    >
                    <TextView
                        android:id="@+id/tv_old_price01"
                        android:layout_width="wrap_content"
                        android:textColor="@color/defualt_textcolor_c"
                        android:layout_height="wrap_content"
                        android:text="原价:"/>
                    <TextView
                        android:id="@+id/tv_old_price"
                        android:layout_toRightOf="@+id/tv_old_price01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 800.00"
                        android:layout_marginLeft="10dip"
                        android:textColor="@color/defualt_textcolor_c"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_express"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:text="快递:10.00"
                        android:textColor="@color/defualt_textcolor_c"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_sell"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:text="销量:1713"
                        android:gravity="center_horizontal"
                        android:textColor="@color/defualt_textcolor_c"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:text="广东中山"
                        android:gravity="right"
                        android:textColor="@color/defualt_textcolor_c"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:padding="10dip"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_list"
                        android:drawablePadding="5dip"
                        android:gravity="center_vertical"
                        android:text="恒流调焦"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_list"
                        android:drawablePadding="5dip"
                        android:gravity="center_vertical"
                        android:text="大容量强光"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_list"
                        android:drawablePadding="5dip"
                        android:gravity="center_vertical"
                        android:text="紫黄蓝白"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_list"
                    android:drawablePadding="5dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:text="9.7S升级版带USB接口+大三脚架"
                    android:textSize="12sp" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/tv_rlReturnCarsh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:visibility="gone"
                android:background="@color/white"
                android:paddingLeft="10dip">

                <TextView
                    android:id="@+id/tv_tvReturnCarsh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="产品参数"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dip"
                    android:textColor="@color/defualt_textcolor_c"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:background="@color/white"
                android:layout_marginTop="1dip"
                android:visibility="gone"
                android:paddingBottom="20dip"
                android:paddingRight="10dip">

                <TextView
                    android:id="@+id/tv_tvaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="配送至:  请选择配送地址"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dip"
                    android:textColor="@color/defualt_textcolor_c"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>


</LinearLayout>
