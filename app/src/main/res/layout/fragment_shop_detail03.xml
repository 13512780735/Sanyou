<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_b"
    android:orientation="vertical"
    tools:context="com.likeits.sanyou.ui.shop.fargment.ShopDetail03Fragment">

    <!-- TODO: Update blank fragment layout -->
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/ll_shop_comment_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/smssdk_white"
        android:dividerHeight="5dp"
        android:dividerPadding="2dip"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="1dip"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:textColor="@color/defualt_textcolor_c"
                    android:text="评价(6)"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/tv_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/head_red"/>
                    <TextView
                        android:id="@+id/tv_good01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_good"

                        android:text="好评>"
                        android:textColor="@color/defualt_textcolor_c"/>
                </RelativeLayout>

            </RelativeLayout>
            <com.likeits.sanyou.view.MyListview
                android:id="@+id/ll_shop_comment_listview"
                android:layout_width="match_parent"
                android:layout_marginTop="1dip"
                android:background="@color/white"
                android:layout_height="wrap_content"></com.likeits.sanyou.view.MyListview>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>