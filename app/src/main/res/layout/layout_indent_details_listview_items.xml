<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dip">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@mipmap/shop_test01" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dip">

            <TextView
                android:id="@+id/tv_name01"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="顶点钓鱼灯夜钓灯 紫光蓝光黄白四光源大容量"
                android:textColor="@color/defualt_textcolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="¥ 680.00"
                android:textColor="@color/head_red"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="X 1"
            android:textColor="@color/defualt_textcolor_c"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>