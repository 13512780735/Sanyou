<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.likeits.sanyou.view.CircleImageView
            android:id="@+id/me_header_avatar"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:src="@mipmap/icon_test04" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/me_header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="小灰灰"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/me_header_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1楼"
                    android:textColor="@color/defualt_textcolor_d" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_listview_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="还不错！"
                    android:textColor="@color/defualt_textcolor_d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/defualt_textcolor_c"
                    android:text="01-16 18:41"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="中山"
        android:paddingLeft="20dip"
        android:paddingTop="5dip"
        android:textColor="@color/defualt_textcolor_c"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginRight="10dip">

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@+id/tv_message"
            android:drawableLeft="@mipmap/icon_like"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:text="89"
            android:textColor="@color/defualt_textcolor_g"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_message01"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:text="18"
            android:textColor="@color/defualt_textcolor_c"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>