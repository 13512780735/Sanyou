<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_b"
    android:orientation="vertical">

    <com.likeits.sanyou.view.MyGridView
        android:id="@+id/home_header_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:numColumns="4"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:verticalSpacing="10dip"></com.likeits.sanyou.view.MyGridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:orientation="horizontal">
        >

        <LinearLayout
            android:id="@+id/ll_shop01"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop01"
                android:layout_width="match_parent"
                android:layout_height="140dip"
                android:scaleType="fitXY"
                android:src="@mipmap/thumb1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_header_gridView_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 630"
                    android:textColor="@color/head_red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/home_header_gridView_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="¥ 650"
                    android:textColor="@color/defualt_textcolor_f"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/line_color"></View>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_shop02"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingTop="10dip">

                    <TextView
                        android:id="@+id/tv_shopname02"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxEms="1"
                        android:layout_marginLeft="3dip"
                        android:singleLine="true"
                        android:text="手握先机，才是赢家"
                        android:textColor="@color/head_red"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_shoptitle02"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="3dip"
                        android:maxEms="1"
                        android:singleLine="true"
                        android:text="与三友携手，共起财富之门"
                        android:textColor="@color/defualt_textcolor_f"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_header_gridView_new_price02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥ 495"
                            android:textColor="@color/head_red"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_header_gridView_old_price02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="¥ 500"
                            android:textColor="@color/defualt_textcolor_f"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_shop02"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/thumb2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_color"></View>

            <LinearLayout
                android:id="@+id/ll_shop03"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingTop="10dip">

                    <TextView
                        android:id="@+id/tv_shopname03"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxEms="1"
                        android:singleLine="true"
                        android:layout_marginLeft="3dip"
                        android:text="通用钓椅支架"
                        android:textColor="@color/head_red"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_shoptitle03"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="3dip"
                        android:singleLine="true"
                        android:text="不锈钢，夜钓灯钓椅专用支架"
                        android:textColor="@color/defualt_textcolor_f"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_header_gridView_new_price03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥ 495"
                            android:textColor="@color/head_red"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_header_gridView_old_price03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="¥ 500"
                            android:textColor="@color/defualt_textcolor_f"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_shop03"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/thumb3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip">

            <View
                android:id="@+id/view"
                android:layout_width="3dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:background="@color/head_red"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/view"
                android:paddingLeft="5dip"
                android:text="今日资讯" />
        </RelativeLayout>


            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dip"-->
                <!--android:text="热烈庆祝三友钓鱼灯微信小程序商城震撼上线 !" />-->

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginLeft="10dip"-->
                <!--android:layout_marginRight="10dip"-->
                <!--android:padding="10dip"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@mipmap/banner03" />-->
            <com.likeits.sanyou.view.MyListview
                android:id="@+id/home_new_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.likeits.sanyou.view.MyListview>
        </LinearLayout>
</LinearLayout>