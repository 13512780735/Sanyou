<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context="com.likeits.sanyou.ui.information.InformationDetailsActivity">

    <include layout="@layout/layout_header_with_back_img_white"></include>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/information_details_listview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"></com.handmark.pulltorefresh.library.PullToRefreshListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/bgcolor"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_input"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/edit_input_bg"
            android:padding="10dip" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发送"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>
</LinearLayout>
