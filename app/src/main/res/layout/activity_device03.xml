<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_b"
    android:orientation="vertical"
    tools:context="com.likeits.sanyou.ui.device.Device03Activity">

    <include layout="@layout/layout_header_with_back_img"></include>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/ll_home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/smssdk_white"
        android:dividerHeight="5dp"
        android:dividerPadding="2dip"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dip"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="电量剩余时间"
                    android:textColor="@color/head_red"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="8"
                    android:text="4 小时"
                    android:textColor="@color/head_red"
                    android:textSize="28sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="选择光源"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/device_light_rbGroup02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/device_light_rbButton01"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/device_tab_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="白光"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/device_light_rbButton02"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/device_tab_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="蓝光"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/device_light_rbButton03"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/device_tab_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="黄光"
                        android:textColor="@color/white" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="设备亮度"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/device_rbGroup01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/device_rbButton01"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/device_tab_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="C1强档"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/device_rbButton03"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/device_tab_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="C2中档"
                        android:textColor="@color/white" />
                    <RadioButton
                        android:id="@+id/device_rbButton02"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/device_tab_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="C3弱档"
                        android:textColor="@color/white" />
                </RadioGroup>



            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_marginTop="10dip"
                android:background="@color/white">

                <Button
                    android:id="@+id/device_btButton01"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_red_bg"
                    android:text="开"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/device_btButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_drak_bg"
                    android:text="关"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性能与参数" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/nav_down"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="光源:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="美国原装LED芯片封装(黄白10W 蓝紫8W)"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="光色:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="蓝色、白色、紫光、黄光"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="光源寿命:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="五万小时"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="机身材料:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="高强度；铝合金(T6-6063)"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="电池容量"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="9600mAh锂电子电池"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="强照明时间:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="9小时（强光）、20小时（弱光）"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="充电时间:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="12-15小时"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="重量:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="620g"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="防水性能:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="IPX8深度防水"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="尺寸:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="167x95mm"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="颜色:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="玫瑰金黑"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="其他:"
                            android:textColor="@color/head_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dip"
                            android:text="有提手"
                            android:textColor="@color/defualt_textcolor_c" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>
