    <TextView
        android:id="@+id/tv_total_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:padding="10dip"
        android:text="共1件商品 合计 :¥ 680.00（含运费¥ 0.00）"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_color"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     >

        <TextView
            android:id="@+id/del_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_toStartOf="@+id/tv_logistics"
            android:background="@drawable/button_drak_bg01"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:visibility="gone"
            android:text="删除订单"
            android:textColor="@color/defualt_textcolor_c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_logistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dip"
            android:layout_toStartOf="@+id/tv_confirm_payment"
            android:background="@drawable/button_drak_bg01"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="查看物流"
            android:layout_marginBottom="10dip"
            android:visibility="gone"
            android:textColor="@color/defualt_textcolor_c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_confirm_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/button_red_bg01"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:visibility="gone"
            android:text="确认收货"

            android:textColor="@color/head_red"
            android:textSize="12sp" />

    </RelativeLayout>
    <View
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="2dip"

        android:background="@color/line_color"></View>
</LinearLayout>