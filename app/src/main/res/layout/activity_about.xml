<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_b"
    android:orientation="vertical"
    tools:context="com.likeits.sanyou.ui.me.AboutActivity">

    <include layout="@layout/layout_header_with_back_white"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:padding="20dip">

        <TextView
            android:id="@+id/tv_version01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本号："
            android:textColor="@color/defualt_textcolor_d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_version01"
            android:textColor="@color/defualt_textcolor_c"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_color"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dip">

        <TextView
            android:id="@+id/tv_publisher01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发行商："
            android:textColor="@color/defualt_textcolor_d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_publisher01"
            android:textColor="@color/defualt_textcolor_c"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
